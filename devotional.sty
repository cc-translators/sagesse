% Make day number in month, in french
\usepackage{ifthen}
\newcommand{\makedate}[1]{
  \ifthenelse{\equal{#1}{1}}{1\up{er}}{#1}
}

% Define \chaphead to be used in section headings
\let\oldchapter\chapter
