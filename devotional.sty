% Define useful aliases
\newcommand{\dvmonth}[1]{\chapter{##1}}
\newcommand{\dvday}[1]{\section{##1}}

% Set chapter pages
\titleformat{\chapter}[block]
  {\scshape\Huge}
  {}{10pt}
  {\begin{center}}
  [\end{center}\cleardoublepage]

% Tune section headings and use tabs
