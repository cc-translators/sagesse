% Lettrines
\renewcommand{\LettrineFontHook}{\color[gray]{0.5}}
\newcommand{\dvlettrine}[3][]{
   \lettrine[lines=2,lhang=0.33,loversize=0.25,#1]{#2}{#3}
}

% opening quote
\newcommand{\dvquote}[2]{
  \begin{center}\parbox{110mm}{
    \begin{center}
    \hyphenpenalty=10000
    \begin{itshape}#1\end{itshape}\\
    ---~\textsc{#2}
    \end{center}
  }\end{center}\vspace{-5mm}}

% central quote
\newcommand{\dvbox}[2][]{
  \begin{center}\doublebox{
    \parbox{10cm}{
      \vspace{3mm}
        \begin{center}
          \parbox{9cm}{#1\textsc{#2}}
        \end{center}
      \vspace{3mm}
    }
  }\end{center}}

% ending prayer
\newcommand{\dvprayer}[2]{
  \begin{center}\parbox{4in}{
    \begin{center}
    \hyphenpenalty=10000
    \begin{itshape}#1\end{itshape}\\
    \scshape#2
    \end{center}
  }\end{center}}

% Rule sep
\newcommand{\dvrule}{
  \begin{center}
    \rule{1cm}{.3pt}~~\floweroneleft\floweroneright~~\rule{1cm}{.3pt}
  \end{center}
}


